---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../../assets/blog-placeholder-1.jpg';
import { SITE_TITLE } from '../../consts';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const BASE_URL = import.meta.env.BASE_URL;

const { title, description, image = FallbackImage } = Astro.props;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link 
    rel="icon" 
    type="image/jpeg" 
    href={BASE_URL + "favicon-light.jpg"} 
    sizes="128x128"
    media="(prefers-color-scheme: light)" 
    />

<link 
    rel="icon" 
    type="image/jpeg" 
    href={BASE_URL + "favicon-dark.jpg"} 
    sizes="128x128"
    media="(prefers-color-scheme: dark)" 
    />

<link rel="canonical" href={canonicalURL} />

<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<link rel="canonical" href={canonicalURL} />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, Astro.url)} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.src, Astro.url)} />

<script is:inline>
	try {
        const root = document.documentElement;
        const theme = localStorage.getItem('theme');

        if (theme === 'dark') {
            root.classList.add('dark');
        } else if (!theme) {
            // Si no hay tema guardado, comprobar preferencia del sistema.
            // Para forzar Light Mode por defecto, NO hacemos nada si no hay tema guardado. 
            // Esto revierte el comportamiento anterior de dark-by-default.
        }
    } catch (e) {
        console.error("Error applying theme from localStorage:", e);
    }
</script>