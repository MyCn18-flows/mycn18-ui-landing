---
import { LAYOUT_CONFIG } from '@/config/layout';
import { SITE_CONFIG } from '@/config/site';
import { Icon } from 'astro-icon/components';
import { iconMap } from '@/utils/icon-map';
---

<footer class="bg-mono-black px-4 py-16 text-white sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="mb-12 grid grid-cols-1 gap-12 md:grid-cols-4">
      <div class="md:col-span-1">
        <div class="mb-4 text-2xl font-bold">{SITE_CONFIG.name}</div>
        <p class="text-mono-light text-sm leading-relaxed">
          {LAYOUT_CONFIG.footer.tagline}
        </p>
      </div>

      {
        LAYOUT_CONFIG.footer.columns.map((column) => (
          <div>
            <h4 class="mb-4 font-semibold">{column.title}</h4>
            <ul class="space-y-3 text-sm">
              {column.links.map((link) => (
                <li>
                  <a href={link.href} class="text-mono-light">
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div
      class="border-mono-darker flex flex-col items-center justify-between border-t pt-8 md:flex-row"
    >
      <p class="text-mono-light mb-4 text-sm md:mb-0">
        &copy; {LAYOUT_CONFIG.footer.copyright}
      </p>

      <div class="flex space-x-6">
        {
          LAYOUT_CONFIG.footer.social.map((social) => (
            <a
              href={social.href}
              class="text-mono-light"
              aria-label={social.name}
            >
              <Icon name={iconMap[social.icon]} class="h-6 w-6" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
