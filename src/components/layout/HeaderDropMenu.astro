---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import type { DropMenuItem } from '@/types/drop-menu-item';
import { iconMap } from '@/utils/icon-map';
import { Icon } from 'astro-icon/components';

type Props = {
  title: string;
  items: DropMenuItem[];
  rootPath: string;
}

const { title, items, rootPath } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const formatHref = (itemHref: string) => {
  const cleanRootPath = rootPath.startsWith('/') ? rootPath.slice(1) : rootPath;
  const cleanHref = itemHref.startsWith('/') ? itemHref.slice(1) : itemHref;
  return `/${lang}/${cleanRootPath}/${cleanHref}`;
};
---

<div class="group relative flex items-center">
  <button
    type="button"
    class="flex items-center gap-1 py-1 text-mono-black dark:text-white transition-colors duration-500 hover:text-accent font-medium cursor-default"
  >
    {title}
    <Icon 
      name={iconMap['chevron-down']} 
      class="h-4 w-4 transition-transform duration-300 group-hover:rotate-180" 
    />
  </button>

  <div
    class="invisible absolute -left-4 top-full z-50 mt-2 w-[400px] rounded-xl border shadow-2xl 
           /* AQUÍ ESTÁ EL TRUCO: Usamos tus variables de base */
           opacity-0 translate-y-2 transition-all duration-300 ease-out
           group-hover:visible group-hover:opacity-100 group-hover:translate-y-0"
    style="background-color: var(--bg-app); border-color: var(--border-main);"
  >
    <div class="grid grid-cols-1 gap-2 p-2"> 
      {items.map((item) => (
        <a
          href={formatHref(item.href)}
          class="group/item flex items-start gap-3 rounded-lg p-3 transition-all duration-300 
                 hover:bg-mono-lighter/20 dark:hover:bg-mono-dark/40"
        >
          <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg 
                      bg-mono-lighter dark:bg-mono-dark transition-colors duration-500">
            <Icon 
              name={iconMap[item.icon]} 
              class="h-5 w-5 text-mono-black dark:text-white" 
            />
          </div>

          <div class="flex flex-col text-left">
            <span class="text-sm font-bold text-mono-black dark:text-white">
              {t(item.title)}
            </span>
            <span class="text-xs text-mono-black/60 dark:text-white/60">
              {t(item.descriptionTranslationKey)}
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</div>