---
import { contactConfig } from '@/config/contact';
import { Icon } from 'astro-icon/components';

type Props = {
  config?: typeof contactConfig;
}

const { config = contactConfig } = Astro.props;
---

<section id="contact" class="bg-mono-lighter px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="grid grid-cols-1 items-start gap-12 lg:grid-cols-2">
      <div class="scroll-fade-left">
        <h2 class="text-mono-black mb-6 text-4xl font-bold sm:text-5xl">
          {config.title}
        </h2>
        <p class="text-mono-dark mb-8 text-xl leading-relaxed">
          {config.subtitle}
        </p>

        <ul class="mb-8 space-y-4">
          {
            config.benefits.map((benefit) => (
              <li class="flex items-center">
                <Icon
                  name="heroicons:check"
                  class="text-mono-black mr-4 h-6 w-6 shrink-0"
                />
                <span class="text-mono-dark">{benefit}</span>
              </li>
            ))
          }
        </ul>

        <div class="border-mono-light border-t pt-8">
          <p class="text-mono-gray mb-4 text-sm">
            Questions? Reach out to our team:
          </p>
          <a
            href={`mailto:${config.email}`}
            class="text-mono-black font-semibold">{config.email}</a
          >
        </div>
      </div>

      <div class="scroll-fade-right border-mono-lighter rounded-xl border bg-white p-8 shadow-lg">
        <form id="contactForm" class="space-y-6">
          {
            config.form.fields.map((field) => (
              <div>
                <label
                  for={field.title.toLowerCase()}
                  class="text-mono-black mb-2 block text-sm font-semibold"
                >
                  {field.label}
                </label>
                
                {field.title === 'Message' ? (
                  <textarea
                    id={field.title.toLowerCase()}
                    name={field.title.toLowerCase()}
                    rows="4"
                    required={field.required}
                    placeholder={field.placeholder}
                    class="form-input border-mono-lighter w-full resize-none rounded-lg border px-4 py-3"
                  ></textarea>
                ) : (
                  <input
                    type={field.title === 'Email' ? 'email' : 'text'}
                    id={field.title.toLowerCase()}
                    name={field.title.toLowerCase()}
                    required={field.required}
                    placeholder={field.placeholder}
                    class="border-mono-lighter w-full rounded-lg border px-4 py-3"
                  />
                )}
              </div>
            ))
          }

          <button
            type="submit"
            class="bg-mono-black w-full rounded-lg px-6 py-4 font-semibold text-white shadow-lg transition-transform hover:scale-[1.02]"
          >
            {config.form.cta}
          </button>

          <p class="text-mono-gray text-center text-xs leading-relaxed">
            By submitting this form, you agree to our
            <a href="#" class="underline">Terms of Service</a> and
            <a href="#" class="underline">Privacy Policy</a>
          </p>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const setupForm = () => {
    const contactForm = document.getElementById('contactForm') as HTMLFormElement | null;
    
    if (contactForm) {
      contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        alert('Thank you for your message! We will get back to you soon.');
        
        contactForm.reset();
      });
    }
  };

  setupForm();
  
  document.addEventListener('astro:after-swap', setupForm);
</script>