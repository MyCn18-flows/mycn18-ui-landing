---
import { Icon } from 'astro-icon/components';
import type { PricingPlansConfig } from '@/types/pricing-plans-config';

type Props = {
  pricingConfig: PricingPlansConfig;
};

const { pricingConfig } = Astro.props;
---

<section id="pricing" class="border-main bg-app relative border-t-2 px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="scroll-fade-up mx-auto mb-16 max-w-3xl text-center">
      <h2 class="text-main mb-4 text-4xl font-bold sm:text-5xl">{pricingConfig.title}</h2>
      <p class="opacity-70 text-xl">{pricingConfig.subtitle}</p>
    </div>

    <div class="mx-auto grid max-w-6xl grid-cols-1 gap-8 md:grid-cols-3">
      {pricingConfig.plans.map((plan, index) => (
        <div class={`relative rounded-4xl p-8 border-2 transition-all ${
          plan.featured 
          ? 'border-accent scale-105 shadow-2xl z-10 bg-app' 
          : 'border-main/50 bg-mono-lighter/5'
        }`}>
          {plan.featured && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-accent text-white px-4 py-1 rounded-full text-xs font-bold uppercase tracking-widest">
              {plan.badge || 'Popular'}
            </div>
          )}
          <h3 class="text-2xl font-bold mb-2">{plan.name}</h3>
          <div class="mb-6">
            <span class="text-4xl font-bold">{plan.price}</span>
            <span class="opacity-50">{plan.period}</span>
          </div>
          <p class="opacity-70 mb-8 leading-relaxed">{plan.description}</p>
          <ul class="space-y-4 mb-10">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-3">
                <Icon name="heroicons:check-circle" class="h-6 w-6 text-accent shrink-0" />
                <span class="text-sm font-medium">{feature}</span>
              </li>
            ))}
          </ul>
          <a href={plan.cta.href} class={`block w-full py-4 rounded-xl text-center font-bold transition-all ${
            plan.featured ? 'bg-accent text-white shadow-lg shadow-accent/30' : 'bg-main text-app'
          }`}>
            {plan.cta.text}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>