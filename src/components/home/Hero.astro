---
import { LAYOUT_CONFIG } from "@/config/layout"
---

<section class="relative px-4 pt-32 pb-20 sm:px-6 lg:px-8 bg-transparent transition-colors duration-500">
  <div class="bg-mono-black dark:bg-mono-white absolute top-32 left-0 h-32 w-1 opacity-10 transition-colors"></div>
  <div class="bg-mono-black dark:bg-mono-white absolute top-32 right-0 h-32 w-1 opacity-10 transition-colors"></div>

  <div class="mx-auto max-w-7xl relative">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 -mt-24 h-64 w-64 bg-accent/10 blur-3xl rounded-full pointer-events-none"></div>

    <div class="mx-auto max-w-4xl text-center relative z-10">
      <h1
        class="text-mono-black dark:text-mono-white scroll-fade-up mb-6 text-5xl leading-tight font-extrabold sm:text-6xl lg:text-7xl transition-colors duration-500"
      >
        {LAYOUT_CONFIG.hero.headline}<br />
        <span class="text-mono-gray dark:text-mono-light opacity-70">{LAYOUT_CONFIG.hero.subheadline}</span>
      </h1>
      
      <p
        class="text-mono-dark dark:text-mono-gray scroll-fade-up mb-10 text-xl leading-relaxed sm:text-2xl transition-colors duration-500 max-w-2xl mx-auto"
      >
        {LAYOUT_CONFIG.hero.description}
      </p>

      <div class="scroll-fade-up mb-16 flex flex-col justify-center gap-4 sm:flex-row">
        <a
          href={LAYOUT_CONFIG.hero.cta.primary.href}
          class="bg-mono-black dark:bg-mono-white text-white dark:text-mono-black px-8 py-4 rounded-xl font-bold shadow-xl hover:scale-105 transition-all duration-300"
        >
          {LAYOUT_CONFIG.hero.cta.primary.text}
        </a>
        
        <a
          href={LAYOUT_CONFIG.hero.cta.secondary.href}
          class="border-2 border-mono-black/20 dark:border-mono-white/20 text-mono-black dark:text-mono-white px-8 py-4 rounded-xl font-bold hover:bg-mono-black/5 dark:hover:bg-mono-white/10 transition-all duration-300"
        >
          {LAYOUT_CONFIG.hero.cta.secondary.text}
        </a>
      </div>

      <div
        class="border-mono-black/10 dark:border-mono-white/10 mx-auto grid max-w-3xl grid-cols-3 gap-8 border-t pt-20 transition-colors duration-500"
      >
        {
          LAYOUT_CONFIG.hero.stats.map((stat, index) => (
            <div class={`float scroll-fade-up stagger-${index + 1}`}>
              <div class="text-mono-black dark:text-mono-white mb-2 text-4xl font-extrabold transition-colors">
                {stat.value}
              </div>
              <div class="text-mono-gray dark:text-mono-light text-xs font-bold tracking-widest uppercase opacity-60 transition-colors">
                {stat.label}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>