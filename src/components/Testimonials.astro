---
import { Icon } from 'astro-icon/components';
import { iconMap } from '@/utils/icon-map';
import { type IconName } from '@/types/icon-name';

const testimonials = {
    title: 'Loved by Teams Worldwide',
    subtitle: 'See what our customers have to say about AI Agent Platform',
    companyLogos: [
      'TECHFLOW',
      'INNOVATE',
      'DATASTREAM',
      'CLOUDSYNC',
      'NEXUSAI',
    ],
    items: [
      {
        quote:
          'This platform transformed our customer support. We automated 80% of routine inquiries and our team can focus on complex issues. Game changer!',
        author: 'Sarah Johnson',
        role: 'Head of Operations',
        company: 'stripe',
        initials: 'SJ',
        rating: 5,
      },
      {
        quote:
          'The ROI was immediate. We deployed our first agent in under an hour and saved 20 hours per week. The analytics dashboard is incredibly powerful.',
        author: 'Michael Park',
        role: 'CTO',
        company: 'shopify',
        initials: 'MP',
        rating: 5,
      },
      {
        quote:
          'Setup was surprisingly easy. We went from idea to production in less than a week. The support team is exceptional and always available.',
        author: 'Emily Chen',
        role: 'Product Lead',
        company: 'notion',
        initials: 'EC',
        rating: 5,
      },
      {
        quote:
          'Our sales team uses AI agents to qualify leads and schedule meetings. Conversion rates increased by 45% in the first month. Absolutely worth it.',
        author: 'David Martinez',
        role: 'VP of Sales',
        company: 'hubspot',
        initials: 'DM',
        rating: 5,
      },
      {
        quote:
          "We scaled our support from 50 to 5,000 daily conversations without hiring additional staff. The AI understands context better than any tool we've tried.",
        author: 'Rachel Green',
        role: 'Customer Success Director',
        company: 'intercom',
        initials: 'RG',
        rating: 5,
      },
      {
        quote:
          'Integration with our existing tools was seamless. The agents handle everything from data entry to complex workflows. Our team productivity doubled.',
        author: 'James Wilson',
        role: 'Engineering Manager',
        company: 'linear',
        initials: 'JW',
        rating: 5,
      },
    ] as {
      quote: string;
      author: string,
      role: string,
      company: IconName,
      initials: string,
      rating: number,
    }[],
};
---

<section class="relative bg-white px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="scroll-fade-up mx-auto mb-16 max-w-3xl text-center">
      <h2 class="text-mono-black mb-4 text-4xl font-bold sm:text-5xl">
        {testimonials.title}
      </h2>
      <p class="text-mono-dark text-xl">
        {testimonials.subtitle}
      </p>
    </div>

    <div class="mb-20 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        testimonials.items.map((testimonial, index) => (
          <div
            class={`scroll-fade-up border-mono-black bg-mono-lighter rounded-xl border-l-4 p-8 shadow-lg stagger-${(index % 9) + 1}`}
          >
            <div class="mb-4 flex">
              {Array.from({ length: testimonial.rating }).map(() => (
                <Icon
                  name="heroicons:star-solid"
                  class="text-mono-black h-5 w-5"
                />
              ))}
            </div>
            <p class="text-mono-dark mb-6 leading-relaxed">
              "{testimonial.quote}"
            </p>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="bg-mono-black mr-4 flex h-12 w-12 items-center justify-center rounded-full font-semibold text-white">
                  {testimonial.initials}
                </div>
                <div>
                  <div class="text-mono-black font-semibold">
                    {testimonial.author}
                  </div>
                  <div class="text-mono-gray text-sm">{testimonial.role}</div>
                </div>
              </div>
              <Icon
                name={iconMap[testimonial.company]}
                class="text-mono-black h-6 w-6 opacity-60"
              />
            </div>
          </div>
        ))
      }
    </div>

    <div class="scroll-fade-up">
      <div class="bg-mono-lighter rounded-2xl p-12">
        <p
          class="text-mono-gray mb-10 text-center text-sm tracking-wide uppercase"
        >
          Trusted by Leading Companies
        </p>
        <div
          class="mx-auto grid max-w-6xl grid-cols-3 items-center gap-12 sm:grid-cols-4 md:grid-cols-6"
        >
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon name="simple-icons:slack" class="text-mono-black h-12 w-12" />
            <span class="text-mono-gray text-xs font-medium">Slack</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:notion"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Notion</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon name="simple-icons:asana" class="text-mono-black h-12 w-12" />
            <span class="text-mono-gray text-xs font-medium">Asana</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:stripe"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Stripe</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:shopify"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Shopify</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:hubspot"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">HubSpot</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:linear"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Linear</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:intercom"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Intercom</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon name="simple-icons:figma" class="text-mono-black h-12 w-12" />
            <span class="text-mono-gray text-xs font-medium">Figma</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:vercel"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Vercel</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:github"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">GitHub</span>
          </div>
          <div class="flex flex-col items-center justify-center gap-3">
            <Icon
              name="simple-icons:dropbox"
              class="text-mono-black h-12 w-12"
            />
            <span class="text-mono-gray text-xs font-medium">Dropbox</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
